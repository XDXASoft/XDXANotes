<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.XDXANotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:colorPrimaryDark">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="materialButtonStyle">@style/TextBut</item>
        <item name="iconTint">@color/white</item>

    </style>

    <style name="TextBut" parent="Widget.MaterialComponents.Button">

        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/CustomShapeAppearance</item>

    </style>

    <style name="CustomShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


    <style name="MyMaterialSwitch" parent="Theme.MaterialComponents.DayNight">
        <item name="trackTint">@color/colorPrimaryDarkTheme</item>
        <item name="thumbTint">@color/swichtruecolorDark</item>
    </style>


    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="trackTint">@color/colorPrimaryDarkTheme</item>
        <item name="colorControlActivated">@color/swichtruecolorDark</item>

    </style>

    <style name="CustomDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="cornerRadius">20dp</item>
        <item name="backgroundColor">@color/textboxgray</item>
        <item name="android:windowBackground">@drawable/custom_dialog_background_dark</item>
        <item name="colorAccent">@color/colorPrimaryDarkTheme</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimaryDarkTheme</item>
        <item name="rippleColor">@color/colorPrimaryDarkTheme</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.YourApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>